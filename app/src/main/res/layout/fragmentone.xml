<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MyFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:background="#202020">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="#202020"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.45">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">
                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="5dp"

                                    app:cardElevation="1dp"
                                    app:cardUseCompatPadding="true"
                                    android:id="@+id/first">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentEnd="true"
                                        android:background="@drawable/djj">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/imageView5"
                                            android:scaleType="fitXY"
                                            android:background="@drawable/dj" />

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#000000"
                                            android:alpha="0.4"></RelativeLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="   Exclusive!"
                                            android:id="@+id/textView2"
                                            android:textColor="#ffffff"
                                            android:textSize="50dp"
                                            android:alpha="0.6" />

                                        <ImageButton
                                            android:layout_width="300dp"
                                            android:layout_height="200dp"
                                            android:id="@+id/ima"
                                            android:background="#00000000"
                                            android:src="@drawable/skip"
                                            android:scaleType="centerInside"
                                            android:layout_alignParentTop="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_alignParentEnd="true" />
                                    </RelativeLayout>

                                </android.support.v7.widget.CardView>


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5">
                                        <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:cardCornerRadius="5dp"

                                            app:cardElevation="0dp"
                                            app:cardUseCompatPadding="true"
                                            android:id="@+id/two">
                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/djjj">


                                                <ImageView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:id="@+id/imageView6"
                                                    android:scaleType="fitXY"
                                                    android:background="@drawable/dj" />

                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:background="#000000"
                                                    android:alpha="0.4"></RelativeLayout>

                                                <ImageButton
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:id="@+id/imageButton6"
                                                    android:background="#00000000"
                                                    android:src="@drawable/skip"
                                                    android:scaleType="centerInside"
                                                    android:layout_margin="20dp" />
                                            </RelativeLayout>

                                        </android.support.v7.widget.CardView>
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5">
                                        <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:cardCornerRadius="5dp"

                                            app:cardElevation="0dp"
                                            app:cardUseCompatPadding="true"
                                            >
                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/djj">


                                                <ImageView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:id="@+id/imageView7"
                                                    android:src="@drawable/net"
                                                    android:scaleType="fitXY"
                                                    android:background="@drawable/djj" />

                                                <ImageButton
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:id="@+id/imageButton7"
                                                    android:scaleType="center"
                                                    android:background="#00000000"
                                                    android:layout_margin="3dp"
                                                    android:alpha="0.5" />
                                            </RelativeLayout>

                                        </android.support.v7.widget.CardView>
                                    </RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">
                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="5dp"

                                    app:cardElevation="1dp"
                                    app:cardUseCompatPadding="true"
                                    android:id="@+id/ssss">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.8"
                                                android:background="@drawable/dj">

                                                <LinearLayout
                                                    android:orientation="horizontal"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent">

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="match_parent"
                                                        android:text="Permanent Roommates "
                                                        android:id="@+id/textView9"
                                                        android:gravity="center|left"
                                                        android:layout_alignParentEnd="true"
                                                        android:layout_marginLeft="20dp"
                                                        android:textColor="#000000"
                                                        android:textAlignment="gravity"
                                                        android:fontFamily="Times New Roman" />

                                                    <ImageButton
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="match_parent"
                                                        android:id="@+id/imageButton12"
                                                        android:background="#00000000"
                                                        android:src="@drawable/playic"
                                                        android:scaleType="fitStart"
                                                        android:layout_alignParentTop="true"
                                                        android:layout_alignParentEnd="true" />

                                                </LinearLayout>
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.2"
                                                android:background="#1A1A1A"
                                                android:id="@+id/kkk">
                                                <android.support.v7.widget.RecyclerView
                                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                                    android:id="@+id/recycler_view"
                                                    android:padding="5dp"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="wrap_content"
                                                    android:scrollbars="none"
                                                    android:layout_marginLeft="10dp" />
                                            </RelativeLayout>
                                        </LinearLayout>



                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">
                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="5dp"

                                    app:cardElevation="1dp"
                                    app:cardUseCompatPadding="true"
                                    >
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.8"
                                                android:background="@drawable/dj">

                                                <LinearLayout
                                                    android:orientation="horizontal"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent" >

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="match_parent"
                                                        android:text="TVF Pitchers | Season 01"
                                                        android:id="@+id/textView12"
                                                        android:gravity="center|left"
                                                        android:layout_alignParentEnd="true"
                                                        android:layout_marginLeft="20dp"
                                                        android:fontFamily="Times New Roman"
                                                        android:textColor="#000000" />

                                                    <ImageButton
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="match_parent"
                                                        android:id="@+id/imageButton13"
                                                        android:background="#00000000"
                                                        android:src="@drawable/playic"
                                                        android:scaleType="fitStart"
                                                        android:layout_alignParentTop="true"
                                                        android:layout_alignParentEnd="true" />
                                                </LinearLayout>
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.2"
                                                android:background="#1A1A1A">

                                                <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                                                    android:id="@+id/recycler2"
                                                    android:padding="5dp"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="wrap_content"
                                                    android:scrollbars="none"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_alignParentTop="true"
                                                    android:layout_alignParentStart="true" />
                                            </RelativeLayout>
                                        </LinearLayout>



                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">
                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="5dp"

                                    app:cardElevation="1dp"
                                    app:cardUseCompatPadding="true"
                                    >
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.8"
                                                android:background="@drawable/dj">

                                                <LinearLayout
                                                    android:orientation="horizontal"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent" >

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="match_parent"
                                                        android:text="TVF Qtiyapa"
                                                        android:id="@+id/textView13"
                                                        android:gravity="center|left"
                                                        android:layout_alignParentEnd="true"
                                                        android:layout_marginLeft="20dp"
                                                        android:fontFamily="Times New Roman"
                                                        android:textColor="#000000" />

                                                    <ImageButton
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="match_parent"
                                                        android:id="@+id/imageButton14"
                                                        android:background="#00000000"
                                                        android:scaleType="fitStart"
                                                        android:layout_alignParentTop="true"
                                                        android:layout_alignParentEnd="true"
                                                        android:src="@drawable/playic" />
                                                </LinearLayout>
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.2"
                                                android:background="#1A1A1A">

                                                <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                                                    android:id="@+id/recycler3"
                                                    android:padding="5dp"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="wrap_content"
                                                    android:scrollbars="none"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_alignParentBottom="true"
                                                    android:layout_alignParentStart="true" />
                                            </RelativeLayout>
                                        </LinearLayout>



                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">
                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="5dp"

                                    app:cardElevation="1dp"
                                    app:cardUseCompatPadding="true"
                                    >
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.8"
                                                android:background="@drawable/dj">

                                                <LinearLayout
                                                    android:orientation="horizontal"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent" >

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="match_parent"
                                                        android:text="Daaru Pe Charcha"
                                                        android:id="@+id/textView14"
                                                        android:gravity="center|left"
                                                        android:layout_alignParentEnd="true"
                                                        android:layout_marginLeft="20dp"
                                                        android:textColor="#000000"
                                                        android:fontFamily="Times New Roman" />

                                                    <ImageButton
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="match_parent"
                                                        android:id="@+id/imageButton15"
                                                        android:background="#00000000"
                                                        android:src="@drawable/playic"
                                                        android:scaleType="fitStart"
                                                        android:layout_alignParentTop="true"
                                                        android:layout_alignParentEnd="true" />
                                                </LinearLayout>
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.2"
                                                android:background="#1A1A1A">

                                                <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                                                    android:id="@+id/recycler4"
                                                    android:padding="5dp"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="wrap_content"
                                                    android:scrollbars="none"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_alignParentTop="true"
                                                    android:layout_alignParentStart="true" />
                                            </RelativeLayout>
                                        </LinearLayout>



                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
